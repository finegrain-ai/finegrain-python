{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "quart",
            "type": "debugpy",
            "request": "launch",
            "module": "quart",
            "justMyCode": false,
            "args": [
                "run",
                "--port",
                "8601",
                "--host",
                "0.0.0.0",
            ],
            "env": {
                "QUART_APP": "chatgpt_bridge:app",
            }
        }
    ]
}
